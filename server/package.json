{
    "name": "course-platform-api",
    "version": "1.0.0",
    "description": "Backend API for Telegram MiniApp Course Platform",
    "main": "app.js",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/app.ts",
        "demo": "set DEMO_MODE=true && tsx watch src/app.ts",
        "build": "tsc",
        "start": "node dist/app.js",
        "db:migrate": "tsx src/database/migrate.ts",
        "db:seed": "tsx src/database/seed.ts",
        "test": "vitest run",
        "test:integration": "vitest run --config vitest.integration.config.ts"
    },
    "dependencies": {
        "@telegram-apps/init-data-node": "^2.0.10",
        "better-sqlite3": "^12.6.0",
        "bullmq": "^5.34.0",
        "compression": "^1.7.5",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "express-rate-limit": "^7.5.0",
        "helmet": "^8.0.0",
        "ioredis": "^5.4.2",
        "jsonwebtoken": "^9.0.3",
        "yaml": "^2.8.2",
        "zod": "^3.24.0"
    },
    "devDependencies": {
        "@types/better-sqlite3": "^7.6.13",
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/node": "^22.10.0",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.2",
        "typescript": "^5.7.0",
        "vitest": "^2.1.8"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}
